<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="タスク管理" Height="600" Width="480"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- メニューバー -->
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル">
                <MenuItem Header="保存" Click="SaveTasks_Click"/>
                <MenuItem Header="読み込み" Click="LoadTasks_Click"/>
                <Separator/>
                <MenuItem Header="設定" Click="OpenSettings_Click"/>
                <Separator/>
                <MenuItem x:Name="TopMostMenuItem" Header="最前面に表示" IsCheckable="True" Click="TopMostMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- タイマー表示部分 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock x:Name="CurrentTaskName"
                         Text="選択タスク: その他"
                         FontSize="16"/>
                <Button Content="選択解除"
                        Width="70"
                        Height="25"
                        Margin="10,0,0,0"
                        Click="DeselectTask_Click"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                          Orientation="Horizontal"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <TextBlock x:Name="StopwatchDisplay"
                             Text="00:00:00"
                             FontSize="32"
                             FontFamily="Consolas"/>
                    <TextBlock x:Name="StopwatchMilliseconds"
                             Text=".0"
                             FontSize="24"
                             FontFamily="Consolas"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                          Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center">
                    <Button x:Name="StartButton"
                            Content="開始"
                            Width="70"
                            Height="35"
                            Margin="0,0,10,0"
                            Click="StartButton_Click"/>
                    <Button x:Name="StopButton"
                            Content="停止"
                            Width="70"
                            Height="35"
                            Click="StopButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- タスクリスト -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl>
                <!-- 進行中タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="進行中"/>
                            <TextBlock Text="{Binding ElementName=InProgressList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="InProgressList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="完了" Click="CompleteTask_Click"/>
                                <MenuItem Header="保留" Click="SetPendingTask_Click"/>
                                <Separator/>
                                <MenuItem Header="編集" Click="EditTask_Click"/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDDDDD"
                                       BorderThickness="1"
                                       CornerRadius="4"
                                       Padding="8,5"
                                       Margin="0,1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#F8F8F8"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Priority}" Value="High">
                                                    <Setter Property="Background" Value="#FFF0F0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                    <Setter Property="Background" Value="#F0F8FF"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                    <Setter Property="Background" Value="#F0FFF0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding Name}"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"
                                                      FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Status Change Buttons -->
                                        <StackPanel Grid.Column="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="10,0">
                                            <Button Content="完了" 
                                                    Width="50" 
                                                    Height="25"
                                                    Margin="0,0,5,0"
                                                    Click="CompleteTask_Click"/>
                                            <Button Content="保留" 
                                                    Width="50" 
                                                    Height="25"
                                                    Click="SetPendingTask_Click"/>
                                        </StackPanel>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3" 
                                                Content="削除"
                                                Width="50"
                                                Height="25"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo (Only visible for selected task) -->
                                        <TextBlock Grid.Row="1"
                                                  Grid.ColumnSpan="4"
                                                  Text="{Binding Memo}"
                                                  Margin="0,5,0,0"
                                                  TextWrapping="Wrap"
                                                  Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- 保留中タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="保留"/>
                            <TextBlock Text="{Binding ElementName=PendingList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="PendingList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="完了" Click="CompleteTask_Click"/>
                                <MenuItem Header="進行" Click="SetInProgressTask_Click"/>
                                <Separator/>
                                <MenuItem Header="編集" Click="EditTask_Click"/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDDDDD"
                                       BorderThickness="1"
                                       CornerRadius="4"
                                       Padding="5,3"
                                       Margin="0,1"
                                       Background="#F8F8F8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Name}" 
                                                 FontSize="14"
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"
                                                      FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Status Change Buttons -->
                                        <StackPanel Grid.Column="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="10,0">
                                            <Button Content="完了" 
                                                    Width="50" 
                                                    Height="25"
                                                    Margin="0,0,5,0"
                                                    Click="CompleteTask_Click"/>
                                            <Button Content="進行" 
                                                    Width="50" 
                                                    Height="25"
                                                    Click="SetInProgressTask_Click"/>
                                        </StackPanel>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3" 
                                                Content="削除"
                                                Width="50"
                                                Height="25"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo (Only visible for selected task) -->
                                        <TextBlock Grid.Row="1"
                                                  Grid.ColumnSpan="4"
                                                  Text="{Binding Memo}"
                                                  Margin="0,5,0,0"
                                                  TextWrapping="Wrap"
                                                  Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- 完了タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="完了"/>
                            <TextBlock Text="{Binding ElementName=CompletedList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="CompletedList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="進行" Click="SetInProgressTask_Click"/>
                                <MenuItem Header="保留" Click="SetPendingTask_Click"/>
                                <Separator/>
                                <MenuItem Header="編集" Click="EditTask_Click"/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDDDDD"
                                       BorderThickness="1"
                                       CornerRadius="4"
                                       Padding="5,3"
                                       Margin="0,1"
                                       Background="#F8F8F8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Name}" 
                                                 FontSize="14"
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"
                                                      FontWeight="Bold"/>
                                            <TextBlock Text="{Binding CompletedAt, StringFormat='完了: {0:MM/dd HH:mm}'}"
                                                      FontFamily="Consolas"
                                                      FontSize="14"/>
                                        </StackPanel>

                                        <!-- Status Change Button -->
                                        <Button Grid.Column="2" 
                                                Content="進行" 
                                                Width="50" 
                                                Height="25"
                                                Margin="10,0"
                                                Click="SetInProgressTask_Click"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3" 
                                                Content="削除"
                                                Width="50"
                                                Height="25"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo (Only visible for selected task) -->
                                        <TextBlock Grid.Row="1"
                                                  Grid.ColumnSpan="4"
                                                  Text="{Binding Memo}"
                                                  Margin="0,5,0,0"
                                                  TextWrapping="Wrap"
                                                  Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>

            <!-- Add Task Button -->
            <Button Grid.Row="1"
                    Content="新規タスク"
                    Width="100"
                    Height="30"
                    Margin="0,10,0,0"
                    Click="AddTask_Click"/>
        </Grid>
    </Grid>
</Window>
