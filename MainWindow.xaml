<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="タスク管理" Height="660" Width="530"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Topmost="True"
        PreviewKeyDown="Window_PreviewKeyDown"
        Closing="Window_Closing">
    <Window.Resources>
        <!-- 共通ボタンスタイル -->
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="#90CAF9"/>
            <Setter Property="BorderBrush" Value="#64B5F6"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <!-- 危険操作ボタンスタイル -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="BorderBrush" Value="#EF9A9A"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
        </Style>

        <!-- 成功操作ボタンスタイル -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#C8E6C9"/>
            <Setter Property="BorderBrush" Value="#A5D6A7"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- メニューバー -->
        <Menu Grid.Row="0" Background="{DynamicResource MaterialDesignPaper}">
            <MenuItem Header="ファイル">
                <MenuItem Header="保存" Click="SaveTasks_Click"/>
                <MenuItem Header="読み込み" Click="LoadTasks_Click"/>
                <Separator/>
                <MenuItem Header="設定" Click="OpenSettings_Click"/>
                <Separator/>
                <MenuItem x:Name="TopMostMenuItem" Header="最前面に表示" IsCheckable="True" IsChecked="True" Click="TopMostMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- タイマー表示部分 -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignPaper}"
                Margin="10"
                BorderThickness="0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="CurrentTaskName"
                             Text="選択タスク: その他"
                             FontSize="18"
                             FontWeight="SemiBold"/>

                    <Button Grid.Column="1"
                            Content="選択解除"
                            Style="{StaticResource ModernButton}"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="DeselectTask_Click"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource MaterialDesignChipBackground}"
                            Padding="20,10"
                            HorizontalAlignment="Center"
                            CornerRadius="4">
                        <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                            <TextBlock x:Name="StopwatchDisplay"
                                     Text="00:00:00"
                                     FontSize="36"
                                     FontFamily="Consolas"/>
                            <TextBlock x:Name="StopwatchMilliseconds"
                                     Text=".0"
                                     FontSize="28"
                                     FontFamily="Consolas"
                                     Opacity="0.7"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="StartStopButton"
                            Grid.Column="1"
                            Content="開始"
                            Style="{StaticResource SuccessButton}"
                            Width="100"
                            Height="40"
                            Margin="15,0,0,0"
                            Click="StartStopButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- タスクリスト -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl>
                <!-- 進行中タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="進行中" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ElementName=InProgressList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="InProgressList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            BorderThickness="0"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="完了" Click="CompleteTask_Click"/>
                                <MenuItem Header="保留" Click="SetPendingTask_Click"/>
                                <Separator/>
                                <MenuItem Header="編集" Click="EditTask_Click"/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0"
                                       Padding="12,8"
                                       Margin="0,3"
                                       Background="{DynamicResource MaterialDesignPaper}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Priority}" Value="High">
                                                    <Setter Property="Background" Value="#FFF3F3"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                    <Setter Property="Background" Value="#F3F9FF"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                    <Setter Property="Background" Value="#F3FFF3"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0"
                                                 Text="{Binding Name}"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Status Change Buttons -->
                                        <StackPanel Grid.Column="2" 
                                                  Orientation="Horizontal" 
                                                  Margin="10,0">
                                            <Button Content="完了"
                                                     Style="{StaticResource SuccessButton}"
                                                     Width="50"
                                                     Height="30"
                                                     Padding="2"
                                                     Margin="0,0,5,0"
                                                     Click="CompleteTask_Click"/>
                                             <Button Content="保留"
                                                     Style="{StaticResource ModernButton}"
                                                     Width="50"
                                                     Height="30"
                                                     Padding="2"
                                                     Click="SetPendingTask_Click"/>
                                        </StackPanel>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Content="削除"
                                                Style="{StaticResource DangerButton}"
                                                Width="50"
                                                Height="30"
                                                Padding="2"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo -->
                                        <TextBlock Grid.Row="1"
                                                 Grid.ColumnSpan="4"
                                                 Text="{Binding Memo}"
                                                 Margin="0,8,0,0"
                                                 TextWrapping="Wrap"
                                                 Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- 保留中タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="保留" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ElementName=PendingList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="PendingList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            BorderThickness="0"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="復帰" Click="SetInProgressTask_Click"/>
                                <Separator/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0"
                                       Padding="12,8"
                                       Margin="0,3"
                                       Background="{DynamicResource MaterialDesignPaper}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Name}" 
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Status Change Button -->
                                        <Button Grid.Column="2"
                                                Content="復帰"
                                                Style="{StaticResource ModernButton}"
                                                Width="50"
                                                Height="30"
                                                Padding="2"
                                                Margin="10,0"
                                                Click="SetInProgressTask_Click"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Content="削除"
                                                Style="{StaticResource DangerButton}"
                                                Width="50"
                                                Height="30"
                                                Padding="2"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo -->
                                        <TextBlock Grid.Row="1"
                                                 Grid.ColumnSpan="4"
                                                 Text="{Binding Memo}"
                                                 Margin="0,8,0,0"
                                                 TextWrapping="Wrap"
                                                 Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- 完了タスク -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="完了" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ElementName=CompletedList, Path=Items.Count, StringFormat=' ({0})'}" 
                                     Margin="2,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListBox x:Name="CompletedList"
                            Margin="5"
                            HorizontalContentAlignment="Stretch"
                            SelectionChanged="TaskList_SelectionChanged"
                            MouseDoubleClick="EditTask_Click"
                            PreviewMouseDown="ListBox_PreviewMouseDown"
                            MouseDown="ListBox_MouseDown"
                            Background="Transparent"
                            BorderThickness="0"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="True">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="復帰" Click="SetInProgressTask_Click"/>
                                <MenuItem Header="保留" Click="SetPendingTask_Click"/>
                                <Separator/>
                                <MenuItem Header="編集" Click="EditTask_Click"/>
                                <MenuItem Header="削除" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0"
                                       Padding="12,8"
                                       Margin="0,3"
                                       Background="{DynamicResource MaterialDesignPaper}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Name}" 
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Time Information -->
                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='予定: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding ElapsedTime, StringFormat='経過: {0:hh\\:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     FontWeight="Bold"/>
                                            <TextBlock Text="{Binding CompletedAt, StringFormat='完了: {0:MM/dd HH:mm}'}"
                                                     FontFamily="Consolas"
                                                     FontSize="14"
                                                     Opacity="0.7"/>
                                        </StackPanel>

                                        <!-- Status Change Button -->
                                        <Button Grid.Column="2"
                                                Content="復帰"
                                                Style="{StaticResource ModernButton}"
                                                Width="50"
                                                Height="30"
                                                Padding="2"
                                                Margin="10,0"
                                                Click="SetInProgressTask_Click"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Content="削除"
                                                Style="{StaticResource DangerButton}"
                                                Width="50"
                                                Height="30"
                                                Padding="2"
                                                Click="DeleteTask_Click"/>

                                        <!-- Memo -->
                                        <TextBlock Grid.Row="1"
                                                 Grid.ColumnSpan="4"
                                                 Text="{Binding Memo}"
                                                 Margin="0,8,0,0"
                                                 TextWrapping="Wrap"
                                                 Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>

            <!-- Add Task Button -->
            <Button Grid.Row="1"
                    Content="新規タスク"
                    Style="{StaticResource ModernButton}"
                    HorizontalAlignment="Stretch"
                    Margin="5,10,5,0"
                    Click="AddTask_Click"/>
        </Grid>
    </Grid>
</Window>
