<Window x:Class="TaskManager.TaskEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TaskManager"
        Title="タスク編集" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Window.Resources>
        <local:PriorityConverter x:Key="PriorityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル入力 -->
        <TextBlock Text="タイトル"
                 Grid.Row="0"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="TitleTextBox"
                Grid.Row="1"
                Margin="0,0,0,10"/>

        <!-- 優先度選択 -->
        <TextBlock Text="優先度"
                 Grid.Row="2"
                 Margin="0,0,0,5"/>
        <ComboBox x:Name="PriorityComboBox"
                Grid.Row="3"
                Margin="0,0,0,10">
            <ComboBoxItem Content="低" Tag="0"/>
            <ComboBoxItem Content="中" Tag="1"/>
            <ComboBoxItem Content="高" Tag="2"/>
        </ComboBox>

        <!-- メモ入力 -->
        <TextBlock Text="メモ"
                 Grid.Row="4"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="MemoTextBox"
                Grid.Row="5"
                Height="60"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                Margin="0,0,0,10"/>

        <!-- 予定時間 -->
        <TextBlock Text="予定時間"
                 Grid.Row="6"
                 Margin="0,0,0,5"/>
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <ComboBox x:Name="EstimatedHoursComboBox"
                     Width="50"
                     Margin="0,0,5,0"
                     SelectionChanged="EstimatedHoursComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextAlignment="Right" Width="40"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Text="時間"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"/>

            <ComboBox x:Name="EstimatedMinutesComboBox"
                     Width="50"
                     Margin="0,0,5,0"
                     SelectionChanged="EstimatedMinutesComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextAlignment="Left" Margin="5,0,15,0" Width="30"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Text="分"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 経過時間 -->
        <TextBlock Text="経過時間 (HH:mm:ss)"
                 Grid.Row="8"
                 Margin="0,10,0,5"/>
        <Border Grid.Row="8"
                Margin="0,30,0,10"
                BorderThickness="1"
                BorderBrush="#FFABADB3"
                Width="100"
                HorizontalAlignment="Left">
            <TextBox x:Name="ElapsedTimeTextBox"
                    BorderThickness="0"
                    Padding="5,2"
                    TextAlignment="Right"
                    FontFamily="Consolas"
                    Height="24"
                    MinWidth="100"
                    Text="00:00:00"
                    VerticalContentAlignment="Center"/>
        </Border>

        <!-- ボタン -->
        <StackPanel Grid.Row="9"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="保存"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="キャンセル"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>