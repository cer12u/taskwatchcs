<Window x:Class="TaskManager.TaskEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TaskManager"
        Title="タスク編集" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown"
        Loaded="Window_Loaded">
    <Window.Resources>
        <local:PriorityConverter x:Key="PriorityConverter"/>
        
        <!-- 共通スタイル -->
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MaterialDesignPaper}" 
            Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- タイトル入力 -->
            <TextBlock Text="タイトル"
                     Grid.Row="0"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox"
                    Grid.Row="1"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Height="60"
                    FontSize="16"
                    Margin="0,0,0,15"/>

            <!-- 優先度選択 -->
            <TextBlock Text="優先度"
                     Grid.Row="2"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,5"/>
            <ComboBox x:Name="PriorityComboBox"
                    Grid.Row="3"
                    Style="{StaticResource MaterialDesignComboBox}"
                    Margin="0,0,0,15">
                <ComboBoxItem Content="低" Tag="0"/>
                <ComboBoxItem Content="中" Tag="1"/>
                <ComboBoxItem Content="高" Tag="2"/>
            </ComboBox>

            <!-- メモ入力 -->
            <TextBlock Text="メモ"
                     Grid.Row="4"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="MemoTextBox"
                    Grid.Row="5"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Height="150"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,15"/>

            <!-- 予定時間 -->
            <TextBlock Text="予定時間"
                     Grid.Row="6"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,5"/>
            <Border Grid.Row="7" 
                    Background="{DynamicResource MaterialDesignChipBackground}"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Left">
                    <ComboBox x:Name="EstimatedHoursComboBox"
                             Width="70"
                             Style="{StaticResource MaterialDesignComboBox}"
                             Margin="0,0,5,0"
                             SelectionChanged="EstimatedHoursComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                         TextAlignment="Center"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <TextBlock Text="時間"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="0,0,15,0"
                             VerticalAlignment="Center"/>

                    <ComboBox x:Name="EstimatedMinutesComboBox"
                             Width="70"
                             Style="{StaticResource MaterialDesignComboBox}"
                             Margin="0,0,5,0"
                             SelectionChanged="EstimatedMinutesComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                         TextAlignment="Center"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <TextBlock Text="分"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 経過時間 -->
            <TextBlock Text="経過時間"
                     Grid.Row="8"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,5"/>
            <Border Grid.Row="8"
                    Background="{DynamicResource MaterialDesignChipBackground}"
                    CornerRadius="4"
                    Padding="15"
                    Width="150"
                    HorizontalAlignment="Left"
                    Margin="0,25,0,20">
                <TextBox x:Name="ElapsedTimeTextBox"
                        Style="{StaticResource MaterialDesignTextBox}"
                        TextAlignment="Center"
                        FontFamily="Consolas"
                        FontSize="16"
                        Text="00:00:00"
                        IsReadOnly="True"
                        BorderThickness="0"
                        Background="Transparent"/>
            </Border>

            <!-- ボタン -->
            <StackPanel Grid.Row="9"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="保存"
                        Style="{StaticResource ModernButton}"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"/>
                <Button Content="キャンセル"
                        Width="90"
                        Background="{DynamicResource MaterialDesignBodyLight}"
                        Style="{StaticResource ModernButton}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>