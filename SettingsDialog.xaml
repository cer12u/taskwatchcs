<Window x:Class="TaskManager.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 通知設定 -->
        <GroupBox Grid.Row="0" Header="通知設定" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <CheckBox x:Name="NotificationsEnabledCheckBox"
                         Content="通知を有効にする"
                         Margin="0,5"/>

                <Grid Margin="20,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="通知間隔:"
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>

                    <ComboBox x:Name="NotificationIntervalComboBox"
                            Grid.Column="1"
                            Width="60"/>

                    <TextBlock Text="分"
                             Grid.Column="2"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
                </Grid>

                <CheckBox x:Name="EstimatedTimeNotificationCheckBox"
                         Content="予定時間超過を通知する"
                         Margin="20,5,0,5"/>
            </StackPanel>
        </GroupBox>

        <!-- リセット設定 -->
        <GroupBox Grid.Row="1" Header="リセット設定" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="タスクのリセット時刻を設定します。"
                         TextWrapping="Wrap"
                         Margin="0,5"/>

                <Grid Margin="20,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="リセット時刻:"
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <ComboBox x:Name="HoursComboBox"
                                Grid.Column="1"
                                Width="60"/>

                        <TextBlock Text="時"
                                 Grid.Column="2"
                                 VerticalAlignment="Center"
                                 Margin="5,0,5,0"/>

                        <ComboBox x:Name="MinutesComboBox"
                                Grid.Column="3"
                                Width="60"/>

                        <TextBlock Text="分"
                                 Grid.Column="4"
                                 VerticalAlignment="Center"
                                 Margin="5,0,0,0"/>
                    </Grid>
                </Grid>

                <TextBlock Text="指定した時刻に完了済みタスクを自動的にアーカイブします。"
                         TextWrapping="Wrap"
                         Margin="20,5,0,5"
                         Opacity="0.7"/>
            </StackPanel>
        </GroupBox>

        <!-- アーカイブ設定 -->
        <GroupBox Grid.Row="2" Header="アーカイブ設定" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <CheckBox x:Name="AutoArchiveEnabledCheckBox"
                         Content="自動アーカイブを有効にする"
                         Margin="0,5"/>

                <TextBlock Text="リセット時刻に完了済みタスクを自動的にアーカイブします。"
                          TextWrapping="Wrap"
                          Margin="20,5,0,5"
                          Opacity="0.7"/>

                <CheckBox x:Name="InactiveTasksEnabledCheckBox"
                         Content="非アクティブタスクの自動移動を有効にする"
                         Margin="0,10,0,5"/>

                <TextBlock Text="72時間（3日間）更新のないタスクは自動的に保留状態に移行します。"
                          TextWrapping="Wrap"
                          Margin="20,5,0,5"
                          Opacity="0.7"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="保存"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button Content="キャンセル"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>