<Window x:Class="TaskManager.TaskInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新規タスク" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル入力 -->
        <TextBlock Text="タイトル"
                 Grid.Row="0"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="TitleTextBox"
                Grid.Row="1"
                Margin="0,0,0,10"/>

        <!-- メモ入力 -->
        <TextBlock Text="メモ"
                 Grid.Row="2"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="MemoTextBox"
                Grid.Row="3"
                Height="60"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                Margin="0,0,0,10"/>

        <!-- 予定時間 -->
        <TextBlock Text="予定時間"
                 Grid.Row="4"
                 Margin="0,0,0,5"/>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="HoursComboBox"
                     Grid.Column="0"
                     Width="60"
                     Margin="0,0,5,0"/>
            
            <TextBlock Text="時間"
                     Grid.Column="1"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"/>

            <ComboBox x:Name="MinutesComboBox"
                     Grid.Column="2"
                     Width="60"
                     Margin="0,0,5,0"/>
            
            <TextBlock Text="分"
                     Grid.Column="3"
                     VerticalAlignment="Center"/>
        </Grid>

        <!-- その他タスクの時間を加算 -->
        <CheckBox x:Name="AddOtherTimeCheckBox"
                 Grid.Row="6"
                 Content="「その他」の作業時間を加算する"
                 Margin="0,10,0,10"/>

        <!-- ボタン -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="追加"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="AddButton_Click"/>
            <Button Content="キャンセル"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>