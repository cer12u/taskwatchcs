<Window x:Class="TaskManager.TaskInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新規タスク" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル入力 -->
        <Label Grid.Row="0" Content="タイトル"/>
        <TextBox x:Name="TitleTextBox" 
                 Grid.Row="1" 
                 Margin="0,0,0,15"/>

        <!-- メモ入力 -->
        <Label Grid.Row="2" Content="メモ"/>
        <TextBox x:Name="MemoTextBox" 
                 Grid.Row="3" 
                 Height="80"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,15"/>

        <!-- 予定時間入力 -->
        <Label Grid.Row="4" Content="予定時間"/>
        <Grid Grid.Row="5" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="HoursTextBox" 
                     Grid.Column="0"
                     Width="60" 
                     Height="25"
                     VerticalContentAlignment="Center"/>
            <Label Grid.Column="1"
                   Content="時間" 
                   Margin="5,0,15,0"/>
            <TextBox x:Name="MinutesTextBox" 
                     Grid.Column="2"
                     Width="60" 
                     Height="25"
                     VerticalContentAlignment="Center"/>
            <Label Grid.Column="3"
                   Content="分" 
                   Margin="5,0,0,0"/>
        </Grid>

        <!-- ボタン -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="キャンセル" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="追加" 
                    Width="80"
                    Height="30"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>